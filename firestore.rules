service cloud.firestore {
  match /databases/{database}/documents {
      match /users/{userId} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }
      match /users/{userId}/posts/{document=**} {
        allow read: if true;
        allow write: if request.auth.uid == userId;
      }
      match /postData/{document=**} {
        allow read, write: if true;
      }
  }
}